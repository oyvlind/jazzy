{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "ol", // replace with YOUR_USERNAME
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "ol" // replace with YOUR_USERNAME
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:1",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },

    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
    ],

    "mounts": [
       "source=/home/ol/jazzy,target=/ws,type=bind,consistency=cached" // source=/<path to local directry on host computer>
    ],
    
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R $(whoami) /home/ws/",
    "postStartCommand": "sudo rosdep fix-permissions && rosdep update && sudo chown -R $(whoami) /home/ws/ && echo 'Post-start setup complete!'"

}